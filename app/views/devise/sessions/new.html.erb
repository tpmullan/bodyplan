<div class="omb_login">
  <h3 class="omb_authTitle">Login or <%= link_to "Sign up", new_registration_path(resource_name) %></h3>
  <div class="row omb_row-sm-offset-3 omb_socialButtons">
    <div class="col-xs-4 col-sm-2">
      <a href="#" class="btn btn-lg btn-block omb_btn-facebook">
        <i class="fa fa-facebook visible-xs"></i>
        <span class="hidden-xs">Facebook</span>
      </a>
    </div>
    <div class="col-xs-4 col-sm-2">
      <a href="#" class="btn btn-lg btn-block omb_btn-twitter">
        <i class="fa fa-twitter visible-xs"></i>
        <span class="hidden-xs">Twitter</span>
      </a>
    </div>
    <div class="col-xs-4 col-sm-2"  >
      <a href="#" class="btn btn-lg btn-block omb_btn-google googleplus-login">
        <i class="fa fa-google-plus visible-xs"></i>
        <span class="hidden-xs">Google+</span>
      </a>
    </div>
  </div>

  <div class="row omb_row-sm-offset-3 omb_loginOr">
    <div class="col-xs-12 col-sm-6">
      <hr class="omb_hrOr">
      <span class="omb_spanOr">or</span>
    </div>
  </div>
  
  <div class="row omb_row-sm-offset-3">
    <div class="col-xs-12 col-sm-6">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource), :class => 'form') do |f| %>
        <div class="form-group-sm">
        <%= f.input :email, :label => false, :required => false, :autofocus => true ,
          :input_html => { :class => 'form-control', :placeholder => "E-mail" }%>
        </div>                                                                                                                                                                             
        <div class="form-group-sm">
          <%= f.input :password, :label => false,  :required => false ,
            :input_html => { :class => 'form-control', :placeholder => "Password" }%>
        </div> 
        <div class="form-actions form-actions-padding"> 
          <%= f.button :submit, "Login", :class => "btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row omb_row-sm-offset-3">
    <div class="col-xs-12 col-sm-3">
    </div>
    <div class="col-xs-12 col-sm-3">
      <p class="omb_forgotPwd">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <% end -%>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
      <% end -%>
      </p>
    </div>
  </div>
</div>
