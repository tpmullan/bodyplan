<div class="row">
  <div class="col-sm-4 col-centered">
    <div class="g-signin2 googleplus-login btn" data-onsuccess="onSignIn" data-theme="dark"></div>
    <button class="googleplus-login btn">Sign in with Google</button>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource), :class => 'form') do |f| %>
      <div class="form-group-sm">
      <%= f.input :email, :label => false, :required => false, :autofocus => true ,
        :input_html => { :class => 'form-control', :placeholder => "E-mail" }%>
      </div>                                                                                                                                                                             
      <div class="form-group-sm">
        <%= f.input :password, :label => false,  :required => false ,
          :input_html => { :class => 'form-control', :placeholder => "Password" }%>
      </div> 
      <div class="form-actions form-actions-padding"> 
        <%= f.button :submit, "Login", :class => "btn-primary btn-block" %>
      </div>
    <% end %>
  
    <%= render "devise/shared/links" %> 
  </div>
</div>
