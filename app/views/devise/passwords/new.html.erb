<h2>Forgot your password?</h2>

<div class="col-sm-4 col-centered">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    
    <%= f.error_notification %>

    <div class="form-group-sm">
      <%= f.input :email, :label => false, :autofocus => true, 
        input_html: { class: 'form-control', placeholder: "Please enter your E-mail" }%>
    </div>

    <div class="form-actions form-actions-padding">
      <%= f.button :submit, "Send Password Reset Instructions", :class => "btn-primary btn-block" %>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
