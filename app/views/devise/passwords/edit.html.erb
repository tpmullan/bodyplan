<h2>Change your password</h2>

<div class="col-sm-4 col-centered">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { method: :put, :class => 'form'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>
  
  <div class="form-group-sm">
    <%= f.input :password, :label => false,  :required => true, :autofocus => true,
          input_html: { class: 'form-control', placeholder: "New password" }%>
    <%= f.input :password_confirmation, :label => false, :required => true,
        input_html: { class: 'form-control', placeholder: "Confirm your new password" }%>
  </div>

  <div class="form-actions form-actions-padding">
    <%= f.button :submit, "Change my password", :class => "btn-primary btn-block" %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
</div>

