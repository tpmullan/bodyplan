<h2>Sign up</h2>
<div class="col-sm-4 col-centered">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group-sm">
    <%= f.input :email, label: false, required: true, autofocus: true,
      input_html:{ class: 'form-control', placeholder: "Email" }%>
    <%= f.input :first_name, label: false, required: false, autofocus: true,
      input_html:{ class: 'form-control', placeholder: "First Name" }%>
    <%= f.input :last_name, label: false, required: false, autofocus: true,
      input_html:{ class: 'form-control', placeholder: "Last Name" }%>
    <%= f.input :password, required: true, label: false,
      input_html:{ class: 'form-control', placeholder: "Password" }%>
    <%= f.input :password_confirmation, required: true, label: false,
          input_html:{ class: 'form-control', placeholder: "Password Confirmation" }%>
  </div>

  <div class="form-actions form-actions-padding">
    <%= f.button :submit, "Sign up", :class => "btn-primary btn-block" %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
</div>
