<%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <h1>Public Information</h1>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :sex, label: 'Gender', :include_blank => false, :collection =>  { 'Male' => 'male', 'Female' => 'female' }  %>
  <%= f.input :bio, as: :text %>
  <%= f.input :website %>
  <h1>Private Information</h1>
  <%= f.input :email, placeholder: 'user@domain.com' %>
  <%= f.input :phone, placeholder: '512-555-5555' %>
  <%= f.button :submit %>
<% end %>
